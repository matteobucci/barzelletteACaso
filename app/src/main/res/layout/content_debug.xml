<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_debug"
    tools:context="com.matteobucci.barzelletteacaso.DebugActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_ti_piace_barza_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Ti piace l&apos;app?" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Segnala barzelletta"
        android:id="@+id/dialog_segnala_barza"
        android:layout_below="@+id/dialog_ti_piace_barza_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Proponi barzelletta"
        android:id="@+id/dialog_proponi_barzelletta"
        android:layout_below="@+id/dialog_segnala_barza"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />
</RelativeLayout>
