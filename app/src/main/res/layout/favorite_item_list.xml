<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matteobucci.barzelletteacaso.view.FavoriteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferite_introduction"
            android:id="@+id/textViewPreferiti"
            android:layout_gravity="start|top"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardList"
            android:layout_below="@+id/textViewPreferiti" />


    </RelativeLayout>

    <TextView android:id="@+id/emptyListError" android:layout_width="match_parent"
        android:layout_height="fill_parent" android:gravity="center"
        android:text=""
        android:padding="40dp"
        />

</FrameLayout>
